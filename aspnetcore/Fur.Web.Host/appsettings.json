{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  // 连接字符串
  "ConnectionStrings": {
    "FurConnectionString": "Server=localhost;Database=Fur;User=sa;Password=000000;MultipleActiveResultSets=True;",
    "FurMultipleConnectionString": "Server=localhost;Database=Fur2;User=sa;Password=000000;MultipleActiveResultSets=True;"
  },
  // 系统应用全局配置选项
  "FurOptions": {
    // 镜面控制器配置选项
    "MirrorControllerOptions": {
      // Api路由统一前缀
      "DefaultStartRoutePrefix": "api",
      // 生成路由时，自动去除控制器名称前后缀
      "ClearControllerRouteAffix": [
        "AppServices",
        "AppService",
        "ApplicationServices",
        "ApplicationService",
        "Business",
        "Controller",
        "ApiController",
        "Services",
        "Service"
      ],
      // 生成路由时，自动去除Action名称前后缀
      "ClearActionRouteAffix": [
        "Async"
      ],
      // 默认接口版本
      "DefaultApiVersion": null,
      // 默认请求方式
      "DefaultHttpMethod": "POST",
      // 小写Api地址
      "LowerCaseUri": true,
      // 移除Actoin路由名称请求动词
      "RemoveActionRouteVerb": true
    },
    // Swagger 文档配置
    "SwaggerDocOptions": {
      // 文档标题
      "DocumentTitle": "Fur Swagger Api Document.",
      // 启用MiniProfiler组件
      "EnableMiniProfiler": true,
      // 加载注释的程序集
      "LoadCommentsAssemblies": [
        "Fur.Application",
        "Fur.Web.Host"
      ],
      // 分组配置
      "Groups": [
        {
          // 分组名
          "Name": "Default",
          // 标题
          "Title": "Fur Default Api",
          // 描述
          "Description": "This is default restful api description.",
          // 版本号
          "Version": "1.0.0",
          // 接口协议信息
          "TermsOfService": "",
          // 联系信息
          "Contact": {
            // 名称
            "Name": "MonkSoul",
            // Uri 地址
            "Uri": "",
            // 电子邮箱
            "Email": "monksoul@outlook.com"
          },
          // 协议信息
          "License": {
            // 名称
            "Name": "MonkSoul",
            // Uri 地址
            "Uri": ""
          }
        }
      ]
    }
  }
}